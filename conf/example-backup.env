# 日志级别 (INFO, WARNING, ERROR, SUCCESS, FILE)
LOG_LEVEL=INFO

# 调试模式 (true or false)
# DEBUG=false

## 备份路径
PATHS=("/home/test")

# 备份主机
# HOSTS=("host1.example.com" "host2.example.com")

# 企业微信配置
# WECOM_KEY=your_wecom_webhook_key

# 域名配置
# VIA_DOMAIN=cdn.example.com

# 阿里云配置
# ALIYUN_OSS_BUCKET=your-oss-bucket-name
# ALIYUN_REGION=cn-beijing  # 例如：cn-beijing, cn-shanghai, cn-hangzhou 等
# ALIYUN_ACCESS_KEY_ID=your_access_key_id
# ALIYUN_ACCESS_KEY_SECRET=your_access_key_secret

# Redis 配置
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password

# MySQL 配置
# MYSQL_HOST=localhost
# MYSQL_USER=backup_user
# MYSQL_PASSWORD=your_secure_password
# MYSQL_DBS=("database1" "database2" "database3")  # 要备份的数据库列表

# 可选：设置备份保留时间（天）
# BACKUP_RETENTION_DAYS=30

# 可选：设置最大并发备份数
# MAX_CONCURRENT_BACKUPS=5

# 可选：设置临时目录
# TEMP_DIR=/tmp/backups

# 可选：设置备份前要执行的命令
# PRE_BACKUP_COMMAND="service mysql stop"

# 可选：设置备份后要执行的命令
# POST_BACKUP_COMMAND="service mysql start"
