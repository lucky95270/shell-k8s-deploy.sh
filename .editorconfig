# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# 所有文件的默认设置
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Windows批处理文件
[*.{cmd,bat}]
charset = gbk
end_of_line = crlf

# PowerShell脚本
[*.ps1]
charset = utf-8-bom
end_of_line = crlf

# Python文件
[*.py]
charset = utf-8
end_of_line = lf

# Shell脚本
[*.sh]
end_of_line = lf

# Lua配置文件
[*.lua]
indent_size = 2

# Markdown文件
[*.md]
trim_trailing_whitespace = false